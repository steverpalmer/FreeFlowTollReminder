<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Spinner
            android:layout_width="297dp"
            android:layout_height="43dp"
            android:id="@+id/calendarSelection"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toEndOf="@+id/calendarFieldTag"
            app:layout_constraintHorizontal_bias="0.666" android:visibility="invisible"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="66dp"
            android:layout_height="43dp"
            android:text="@string/calendarLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/calendarFieldTag"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/calendarSelection"/>
    <Button
            android:text="@string/finishButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finishButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>